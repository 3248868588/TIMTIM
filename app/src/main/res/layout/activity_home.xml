<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginPage.HomeActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></androidx.viewpager.widget.ViewPager>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imagebtn_home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="200dp"
                android:layout_weight="1"
                android:background="@drawable/home222" />

            <TextView
                android:id="@+id/tv_shouye"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="首页"
                android:textColor="#C50A0A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imagebtnb_personal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/personal111" />

            <TextView
                android:id="@+id/tv_personal"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="个人"
                android:textColor="#000" />
        </LinearLayout>

    </LinearLayout>
